{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "quiz-block/interactive-quiz",
	"version": "0.1.0",
	"title": "Interactive Quiz",
	"category": "widgets",
	"icon": "media-interactive",
	"description": "An interactive block with the Interactivity API",
	"example": {},
	"supports": {
		"interactivity": true
	},
	"textdomain": "interactive-quiz",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"viewScriptModule": "file:./view.js",
	"attributes": {
		"question": {
			"type": "string"
		},
		"options": {
			"type": "array",
			"default": [
				"",
				"",
				"",
				""
			]
		},
		"correctAnswer": {
			"type": "number",
			"default": ""
		},
		"attempted": {
			"type": "boolean",
			"default": false
		},
		"attemptedAnswer": {
			"type": "number",
			"default": ""
		}
	}
}
